      },
      {
        title: 'Nephrology',
      },
      {
        title: 'Urology',
      },
      {
        title: 'Dermatology',
      },
      {
        title: 'Respiratory care',
      },
      {
        title: 'Oncology',
      },
      {
        title: 'Dental care',
      },
      {
        title: 'Nutritionals',
      },
    ]}
  />

